<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="CommonCommittee" parent="CommonCommittee-parentBean" />
	<bean id="CommonCommittee-parentBean" abstract="true" parent="Committee-parentBean">
		<property name="businessObjectClass" value="org.kuali.kra.common.committee.bo.CommonCommittee" />
		
		<property name="objectLabel" value="CommonCommittee" />
		
		<property name="lookupDefinition" >
			<ref bean="CommonCommittee-lookupDefinition" />
		</property>
		
		<property name="attributes" >
			<list>
				<ref bean="CommitteeAttribute-CommitteeId" />
				<ref bean="CommitteeAttribute-CommitteeName" />
				<ref bean="CommitteeAttribute-HomeUnitNumber" />
				<ref bean="CommitteeAttribute-CommitteeTypeCode" />
				<ref bean="CommitteeAttribute-CommitteeDescription" />
				<ref bean="CommitteeAttribute-ScheduleDescription" />	
				<!-- An attribute that we are overriding in this file -->	
				<ref bean="CommonCommitteeAttribute-ReviewTypeCode" />
				<ref bean="CommitteeAttribute-CoiReviewTypeCode" />
				<ref bean="CommitteeAttribute-MinimumMembersRequired" />
				<ref bean="CommitteeAttribute-MaxProtocols" />
				<ref bean="CommitteeAttribute-AdvancedSubmissionDaysRequired" />
				<ref bean="CommitteeAttribute-UpdateUser" />
				<ref bean="CommitteeAttribute-UpdateTimestamp" />
				<ref bean="CommitteeAttribute-VersionNumber" />
				<!-- An attribute that we are overriding in this file -->
				<ref bean="CommonCommitteeAttribute-committeeMemberships.membershipRoles.membershipRoleCode" />
				<ref bean="CommitteeAttribute-committeeMemberships.personName" />
				<ref bean="CommitteeAttribute-committeeResearchAreas.researchAreaCode" />
				<ref bean="CommitteeAttribute-homeUnit.unitName" />
				<ref bean="CommitteeAttribute-CommitteeChair" />
			</list>
		</property>
	</bean>
	
		<!-- Attribute Definitions -->
	
	<bean id="CommonCommitteeAttribute-ReviewTypeCode" parent="CommonCommitteeAttribute-ReviewTypeCode-parentBean" />
	<bean id="CommonCommitteeAttribute-ReviewTypeCode-parentBean" abstract="true" parent="AttributeDefinition">
	    <property name="name" value="reviewTypeCode" />
	    <property name="forceUppercase" value="false" />
	    <property name="label" value="Review Type" />
	    <property name="shortLabel" value="Review Type" />
	    <property name="maxLength" value="3" />
	    <property name="validationPattern" >
	      <bean parent="AlphaNumericValidationPattern" />
	    </property>
	    <!-- <property name="required" value="true" />  -->
	    <property name="control" >
	      <bean parent="SelectControlDefinition"
	            p:businessObjectClass="org.kuali.kra.iacuc.actions.submit.IacucProtocolReviewType"
	            p:valuesFinderClass="org.kuali.kra.lookup.keyvalue.ExtendedPersistableBusinessObjectValuesFinder"
	            p:includeKeyInLabel="false"
            	p:includeBlankRow="false"
	            p:keyAttribute="reviewTypeCode"
	            p:labelAttribute="description" />
	    </property>
	    <property name="summary" value="Review Type" />
	    <property name="description" value="The type of review." />
    </bean>
	
	

    <!--  lookup field -->
    
    
    <bean id="CommonCommitteeAttribute-committeeMemberships.membershipRoles.membershipRoleCode" parent="CommonCommitteeAttribute-committeeMemberships.membershipRoles.membershipRoleCode-parentBean" />
    <bean id="CommonCommitteeAttribute-committeeMemberships.membershipRoles.membershipRoleCode-parentBean" abstract="true" parent="MembershipRole-membershipRoleCode">
	    <property name="name" value="committeeMemberships.membershipRoles.membershipRoleCode" />
	    <property name="forceUppercase" value="false" />
		<property name="required" value="false" />
	    <property name="label" value="Role Description" />
	    <property name="shortLabel" value="Role Description" />
	    <property name="control" >
	      <bean parent="SelectControlDefinition"
	            p:businessObjectClass="org.kuali.kra.common.committee.bo.MembershipRole"
	            p:valuesFinderClass="org.kuali.kra.lookup.keyvalue.ExtendedPersistableBusinessObjectValuesFinder"
	            p:includeKeyInLabel="false"
            	p:includeBlankRow="false"
	            p:keyAttribute="membershipRoleCode"
	            p:labelAttribute="description" />
	    </property>
    </bean>    
	
	
	
	<!-- Business Object Lookup Definition -->
	<bean id="CommonCommittee-lookupDefinition" parent="CommonCommittee-lookupDefinition-parentBean" />
	<bean id="CommonCommittee-lookupDefinition-parentBean" abstract="true" parent="Committee-lookupDefinition-parentBean">
		<property name="title" value="IACUC Committee Lookup" />
        <property name="lookupableID" value="commonCommitteeLookupable" />
    </bean>    
	
</beans>
