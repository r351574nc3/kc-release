        <filtering>true</filtering>
        <directory>src/test/resources</directory>
        <includes>
          <include>META-INF/kc-test-config.xml</include>
        </includes>
      </testResource>
      <testResource>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>

